<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="8dp">

    <TextView
        android:id="@+id/training_summary_serie_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toTopOf="@id/training_summary_serie_tv_repeats"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Seria 1">


    </TextView>

    <TextView
        android:id="@+id/training_summary_serie_tv_repeats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:text="@string/repeats_colon"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/training_summary_serie_tv_weight"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/training_summary_serie_number"

        />

    <TextView
        android:id="@+id/training_summary_serie_tv_repeats_text"

        android:layout_width="wrap_content"
        android:textStyle="bold"
        android:layout_marginEnd="4dp"
        tools:text="10223"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/training_summary_serie_number"
        app:layout_constraintBottom_toTopOf="@id/training_summary_serie_tv_weight"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/training_summary_serie_tv_weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:text="@string/weight_colon"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/training_summary_serie_tv_repeats" />
    <TextView
        android:id="@+id/training_summary_serie_tv_weight_text"
        android:layout_width="wrap_content"
        android:textStyle="bold"
        android:layout_marginEnd="4dp"
        tools:text="10223"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/training_summary_serie_tv_weight"
        app:layout_constraintBottom_toBottomOf="@id/training_summary_serie_tv_weight"
        android:layout_height="wrap_content" />

</android.support.constraint.ConstraintLayout>